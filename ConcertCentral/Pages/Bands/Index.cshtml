@page
@model ConcertCentral.Pages.Bands.IndexModel

@{
    ViewData["Title"] = "Band";
    <link rel="icon" href="/images/ConcertCentral.png">
}

<h2>Bands</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].EstablishmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].NoOfMembers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Band) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstablishmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfMembers)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
