@page
@model ConcertCentral.Pages.Bands.EditModel

@{
    ViewData["Title"] = "Edit";
    <link rel="icon" href="/images/ConcertCentral.png">
}

<h2>Edit</h2>

<h4>Band</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Band.Id" />
            <div class="form-group">
                <label asp-for="Band.Name" class="control-label"></label>
                <input asp-for="Band.Name" class="form-control" />
                <span asp-validation-for="Band.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Band.EstablishmentDate" class="control-label"></label>
                <input asp-for="Band.EstablishmentDate" class="form-control" />
                <span asp-validation-for="Band.EstablishmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Band.Genre" class="control-label"></label>
                <input asp-for="Band.Genre" class="form-control" />
                <span asp-validation-for="Band.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Band.NoOfMembers" class="control-label"></label>
                <input asp-for="Band.NoOfMembers" class="form-control" />
                <span asp-validation-for="Band.NoOfMembers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
