@page
@model ContactUsPageModel
@{
    ViewData["Title"] = "Contact Us";
    <link rel="icon" href="/images/ConcertCentral.png">
}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form method="post" style="margin-top: 50px;">

                    <input type="hidden" asp-for="ContactUsForm.Id" />
                    <div class="form-group">
                        <label asp-for="ContactUsForm.Name" class="control-label"></label>
                        <input asp-for="ContactUsForm.Name" class="form-control" value=""/>
                        <span asp-validation-for="ContactUsForm.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactUsForm.Email" class="control-label"></label>
                        <input asp-for="ContactUsForm.Email" class="form-control" value=""/>
                        <span asp-validation-for="ContactUsForm.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactUsForm.Comments" class="control-label"></label>
                        <input asp-for="ContactUsForm.Comments" class="form-control" value=""/>
                        <span asp-validation-for="ContactUsForm.Comments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div> 
                    @if(Model.RecordSaved){
                        <div class="success">
                            <p>
                                Record Saved Successfully!
                            </p>
                        </div>
                    }
            </form>
        </div>
    </div>
